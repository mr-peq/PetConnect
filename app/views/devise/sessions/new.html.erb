<div class="service-form-container my-5">
  <h2 class="form-title">Log in</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-wrapper' }) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: 'form-control' },
                  wrapper_html: { class: 'form-group' },
                  label_html: { class: 'form-label' } %>

      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password", class: 'form-control' },
                  wrapper_html: { class: 'form-group' },
                  label_html: { class: 'form-label' } %>

      <% if devise_mapping.rememberable? %>
        <%= f.input :remember_me, as: :boolean, wrapper_html: { class: 'form-check' }, input_html: { class: 'form-check-input' }, label_html: { class: 'form-check-label' } %>
      <% end %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: "btn btn-primary btn-block" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
